# Include important documentation files
include README.md
include PYPI-README.md
include LICENSE
include VERSION
include requirements.txt
include print-project
include print-project.bat

# Include documentation directory
recursive-include docs *

# Include installation scripts directory
recursive-include scripts *

# Include config directory
recursive-include config *

# Include archive directory
recursive-include archive *

# Exclude development and build files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
exclude .gitignore
recursive-exclude .git *
recursive-exclude .vscode *
recursive-exclude output *
recursive-exclude print_project_outputs *
recursive-exclude print_project.egg-info *